<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
    <name>node_helpers</name>
    <version>1.0.0</version>
    <description>An opinionated ROS2 framework that minimizes boilerplate while
        maximizing reliability. Features intuitive APIs for parameter management, action
        handling, and error-resilient RPC. Designed by Urban Machine for safe and
        scalable robotics.
    </description>
    <maintainer email="alex@urbanmachine.build">urbanmachine</maintainer>
    <license>MIT</license>

    <test_depend>python3-pytest</test_depend>
    <test_depend>python3-pytest-cov</test_depend>

    <!-- Required for Interactive Transform features  -->
    <depend>rviz2</depend>

    <!-- Required for ros2_numpy fork   -->
    <depend>geometry_msgs</depend>
    <depend>nav_msgs</depend>
    <depend>sensor_msgs</depend>
    <depend>tf_transformations</depend>

    <export>
        <build_type>ament_python</build_type>
    </export>
</package>
